<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sitanduapp">

    <!-- Tambahkan permissions di sini -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Untuk Android 10+ (API 29+), kita gunakan requestLegacyExternalStorage jika target SDK < 30 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SitanduApp"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name=".DetailTtdActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".DetailJtActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SitanduApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".ForgetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".SetujuiTtdActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <activity
            android:name=".RevisiTtdActivity"
            android:exported="false"
            android:theme="@style/Theme.SitanduApp" />

        <!-- Tambahkan provider untuk FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>