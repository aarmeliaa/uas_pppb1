<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:id="@+id/scroll_view"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal"
            android:fontFamily="@font/notosans_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4D4D4D"
            android:layout_marginBottom="24dp" />

        <!-- Dropdown Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Dropdown Header -->
            <LinearLayout
                android:id="@+id/dropdown_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/roundededittext"
                android:backgroundTint="#BEE5E3"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dropdown_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosans_semi_bold"
                    android:text="Senin, 13 Oktober 2025"
                    android:textSize="18sp"
                    android:textColor="#4D4D4D" />

                <ImageView
                    android:id="@+id/dropdown_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kalender"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Dropdown Options -->
            <LinearLayout
                android:id="@+id/dropdown_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roundededittext"
                android:backgroundTint="#FFFFFF"
                android:visibility="gone"
                android:elevation="4dp">

                <!-- Option Terbaru -->
                <TextView
                    android:id="@+id/option_terbaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terbaru"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Option Terlama -->
                <TextView
                    android:id="@+id/option_terlama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terlama"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
        </LinearLayout>
        <!-- Jadwal Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Janji Temu"
                        android:backgroundTint="#5CBDB9"
                        android:fontFamily="@font/notosans_regular"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/roundededittext"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:text="Bimbingan Tugas Akhir"
                        android:fontFamily="@font/notosans_semi_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/user"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="Andi Wijaya"
                        android:textSize="13sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/jam"
                        android:layout_marginEnd="6dp"

                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="10.00 - 11.00"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/pin"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="Ruang Dosen 2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Jadwal Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Janji Temu"
                        android:fontFamily="@font/notosans_regular"
                        android:backgroundTint="#5CBDB9"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/roundededittext"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:text="Bimbingan Tugas Akhir"
                        android:fontFamily="@font/notosans_semi_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/user"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="Andi Wijaya"
                        android:textSize="13sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/jam"
                        android:layout_marginEnd="6dp"

                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="10.00 - 11.00"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/pin"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="Ruang Dosen 2"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>