<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F1F1F1"
    android:id="@+id/scroll_view"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Janji Temu"
            android:fontFamily="@font/notosans_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4D4D4D"
            android:layout_marginBottom="24dp" />

        <!-- Dropdown Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Dropdown Header -->
            <LinearLayout
                android:id="@+id/dropdown_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/roundededittext"
                android:backgroundTint="#BEE5E3"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dropdown_text"
                    android:fontFamily="@font/notosans_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Senin, 13 Oktober 2025"
                    android:textSize="18sp"
                    android:textColor="#4D4D4D" />

                <ImageView
                    android:id="@+id/dropdown_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kalender"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Dropdown Options -->
            <LinearLayout
                android:id="@+id/dropdown_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roundededittext"
                android:backgroundTint="#FFFFFF"
                android:visibility="gone"
                android:elevation="4dp">

                <!-- Option Terbaru -->
                <TextView
                    android:id="@+id/option_terbaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terbaru"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Option Terlama -->
                <TextView
                    android:id="@+id/option_terlama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terlama"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permintaan Janji Temu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Grid 2 Kolom -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Bimbingan Tugas Akhir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_semi_bold"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/user" />
                    <TextView
                        android:text="Jacob Louis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:fontFamily="@font/notosans_regular"
                        android:textColor="#666666"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:text="24/555555/sv/22222"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/jam" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:text="Senin, 13 Oktober 2025"
                            android:fontFamily="@font/notosans_regular"
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:text="10.00 - 11.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="@font/notosans_regular"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_tinjau_jt_1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="Tinjau"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#53AAA7"
                        android:drawableLeft="@drawable/eye"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Bimbingan Tugas Akhir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_semi_bold"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/user" />
                    <TextView
                        android:text="Jacob Louis"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:text="24/555555/sv/22222"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/jam" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:text="Senin, 13 Oktober 2025"
                            android:fontFamily="@font/notosans_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:text="10.00 - 11.00"
                            android:fontFamily="@font/notosans_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_tinjau_jt_2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="Tinjau"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#53AAA7"
                        android:drawableLeft="@drawable/eye"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>
</ScrollView>