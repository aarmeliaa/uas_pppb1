<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Janji Temu"
            android:background="@drawable/roundededittext"
            android:backgroundTint="#5CBDB9"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_judul_jt"
            android:text="Judul Janji Temu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_sub_judul_jt"
            android:text="Keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tv_nama_jt"
                android:text="Nama Mahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/jam" />

            <TextView
                android:id="@+id/tv_waktu_jt"
                android:text="Senin, 13 Okt â€¢ 10.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_tinjau_jt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Tinjau"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#53AAA7"
            android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>