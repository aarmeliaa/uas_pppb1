<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Janji Temu"
                android:backgroundTint="#5CBDB9"
                android:fontFamily="@font/notosans_regular"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundededittext"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/tv_judul_jadwal"
                android:text="Judul Bimbingan"
                android:fontFamily="@font/notosans_semi_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/user"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_nama_jadwal"
                android:text="Nama Mahasiswa"
                android:textSize="13sp"
                android:fontFamily="@font/notosans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/jam"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_tanggal_jadwal"
                android:text="Senin, 10 Oktober - 10:00"
                android:fontFamily="@font/notosans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/pin"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_lokasi_jadwal"
                android:text="Ruang Dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>