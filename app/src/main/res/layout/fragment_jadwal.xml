<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal"
            android:fontFamily="@font/notosans_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4D4D4D"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/dropdown_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/roundededittext"
                android:backgroundTint="#BEE5E3"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dropdown_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosans_semi_bold"
                    android:text="Pilih Tanggal / Filter"
                    android:textSize="18sp"
                    android:textColor="#4D4D4D" />

                <ImageView
                    android:id="@+id/dropdown_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kalender"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dropdown_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roundededittext"
                android:backgroundTint="#FFFFFF"
                android:visibility="gone"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/option_terbaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan Semua (Terbaru)"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/option_terlama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan Semua (Terlama)"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>