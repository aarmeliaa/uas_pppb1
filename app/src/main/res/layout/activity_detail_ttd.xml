<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/panah_kiri"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detail Permintaan"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_semi_bold"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_judul_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persetujuan KRS"
                android:textSize="24sp"
                android:fontFamily="@font/notosans_bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_sub_judul_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester Ganjil"
                android:textSize="24sp"
                android:fontFamily="@font/notosans_bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Mahasiswa Info with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nama_mhs_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jacob Louis"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_regular"
                        android:textColor="#4D4D4D"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tv_nim_mhs_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:text="24/555555/SV/22222"
                        android:textSize="14sp"
                        android:textColor="#4D4D4D" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_setuju"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/notosans_regular"
                    android:text="Setujui"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    app:backgroundTint="#53AAA7"
                    app:cornerRadius="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_jadwal_ulang"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Revisi"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#4D4D4D"
                    android:textAllCaps="false"
                    app:backgroundTint="#F1F1F1"
                    app:strokeColor="#C1C1C1"
                    app:strokeWidth="1.5dp"
                    app:cornerRadius="24dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>