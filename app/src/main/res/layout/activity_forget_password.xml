<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F1F1F1"
    tools:context=".ForgetPasswordActivity">

    <!-- Card container untuk login form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Judul Login -->
            <TextView
                android:id="@+id/txt_judul_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="Forget Password"
                android:fontFamily="@font/notosans_bold"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Subjudul -->
            <TextView
                android:id="@+id/txt_subjudul_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Akun SÄ±Tandu Anda"
                android:textColor="@color/primary"
                android:fontFamily="@font/notosans_light"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email"
                android:textColor="@color/primary"
                android:fontFamily="@font/notosans_semi_bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_forget_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_light"
                android:layout_marginBottom="16dp"
                android:hint="@mail.ugm.ac.id"
                android:background="@drawable/roundededittext"
                android:padding="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Forget Password"
                android:fontFamily="@font/notosans_semi_bold"
                android:textColor="@color/primary"
                android:backgroundTint="@color/kuning"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>